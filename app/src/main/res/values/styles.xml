<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gradient_end_btn</item>
        <item name="colorPrimaryDark">#0091EA</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <!-- For Activities containing toolbar-->
    <!-- Theme without Actionbar-->

    <style name="AppThemeNo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gradient_end_btn</item>
        <item name="colorPrimaryDark">#0091EA</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
